<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <MeuGeradorDeCodigoExecutable Include="$(MSBuildThisFileDirectory)tools\CodeGenerator.exe" />
    </ItemGroup>

    <Target Name="GenerateCode" BeforeTargets="Build">
        <Exec Command="@(MeuGeradorDeCodigoExecutable)" />
    </Target>  

    <Target Name="ShowMessage" AfterTargets="Build">
        <Message Text="Blindness internal code generated." />
    </Target>
</Project>